<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Translation Preview Dialog"
          sling:resourceType="granite/ui/components/coral/foundation/dialog">
  <content
    jcr:primaryType="nt:unstructured"
    sling:resourceType="granite/ui/components/coral/foundation/container">
    <items jcr:primaryType="nt:unstructured">
      <originalText jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                    name="./originalText"
                    fieldLabel="Original Text"
                    value="Hello World" />
      <translatedText jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                      name="./translatedText"
                      fieldLabel="Translated Text"
                      value="Bonjour le monde" />
    </items>
    <footer jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
      <approveButton jcr:primaryType="nt:unstructured"
                     sling:resourceType="granite/ui/components/coral/foundation/button"
                     text="Approve"
                     variant="primary" />
      <rejectButton jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/button"
                    text="Reject"
                    variant="secondary" />
    </footer>
  </content>
</jcr:root>